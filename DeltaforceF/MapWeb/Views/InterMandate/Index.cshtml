@model IEnumerable<MapWeb.Models.InterMandateModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of InterMandates</h2>

<p>
    <button type="button" class="btn bg-navy margin">
        @Html.ActionLink("Create a new Intermandate", "Create")
        </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            LastName
        </th>
        <th>
            FirstName
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resource.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resource.FirstName)
        </td>
        <td>
            <button type="button" class="btn btn-block btn-success btn-sm">
                @Html.ActionLink("Update", "Edit", new { id = item.InterMandateId }) 
                </button>
            <button type="button" class="btn btn-block btn-warning btn-sm">
                @Html.ActionLink("Details", "Details", new { id = item.InterMandateId }) 
                </button>
            <button type="button" class="btn btn-block btn-danger btn-sm"> @Html.ActionLink("Delete", "Delete", new { id = item.InterMandateId })
                </button>
</td>
    </tr>
}

</table>
