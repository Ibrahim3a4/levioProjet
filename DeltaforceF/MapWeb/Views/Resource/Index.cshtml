@model IEnumerable<Domain.Entity.Resource>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste Of Resources</h2>


<td>
    <button type="button" class="btn  btn-success btn-lg">@Html.ActionLink("Create New Resource", "Create")</button>
</td>
<td>
    <button type="button" class="btn  btn-warning btn-lg">@Html.ActionLink("Consult  Calendar", "Index", "Calendar")</button>
</td>
<td>
    <button type="button" class="btn  btn-danger btn-lg">@Html.ActionLink("  Archived  Resources", "Index", "History")</button>
</td>
<td>
    <button type="button" class="btn  btn-info btn-lg">@Html.ActionLink(" Top 3 Rated Resources", "TopResource", "Resource")</button>
</td>
<td>
    <button type="button" class="btn  btn-info btn-lg">@Html.ActionLink(" Top 3 Payed Resources", "TopSalary", "Resource")</button>
</td>
<td>
    <button type="button" class="btn  btn-info btn-lg">@Html.ActionLink(" Generate Report", "Report", "Resource")</button>
</td>
@foreach (var item in Model)
{
    <table id="example1" class="table table-bordered table-striped">
        <tr>
            <td>
                @{string path = "~/Content/Upload/" + @item.Photo;}
                @*enlever label for pour afficher seulement l'image*@
                <img src="@Url.Content(path)" width="80" height="80" />

            </td>
            <td>
                @Html.Partial("_partial", item)
            </td>


        </tr>
    </table>

}

