@model IEnumerable<Domain.Entity.Message>

@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle" src="../../dist/img/user4-128x128.jpg" alt="User profile picture">

        <h3 class="profile-username text-center">@ViewBag.UserFirstName</h3>

        <p class="text-muted text-center">You have received @ViewBag.UserRecMsg messages</p><br /><br /><br />
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#activity" data-toggle="tab">Inbox</a></li>
                <li><a href="#timeline" data-toggle="tab">Sent</a></li>
                <li><a href="#settings" data-toggle="tab">Deleted</a></li>
            </ul>
            <div class="tab-content">
                <div class="active tab-pane" id="activity">
                </div>
            </div>


            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.Type.ToString() == "complaint")
                {
                                    <td class="fa fa-circle-o text-yellow"></td>}
                                @if (item.Type.ToString() == "technical_problem")
                {
                                    <td class="fa fa-circle-o text-red"></td>}
                                @if (item.Type.ToString() == "satisfaction")
                {
                                    <td class="fa fa-circle-o text-aqua"></td>}
                                <td>
                                    @Html.DisplayFor(modelItem => item.MUser, new { @class = "mailbox-name" })
                                </td>
                                <td>
                                    <b>@Html.DisplayFor(modelItem => item.Subject, new { @class = "mailbox-subject" }) </b>
                                    - @item.Content.Substring(0, Math.Min(item.Content.Length, 100))<text>...</text>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MessageDate, new { @class = "mailbox-date" })
                                </td>
                                @**@
                                    <
                                    <td>
                                        <div class="mailbox-controls with-border text-center">
                                            <div class="btn-group">
                                                @*<button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                                        <i class="fa fa-trash-o"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                                        <i class="fa fa-arrow-circle-right">@Html.ActionLink(" ", "Delete", new { id = item.MessageId })</i>
                                                    </button>*@<button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                                    <i class="fa fa-trash-o"></i>
                                                </button>
                                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                                    <i class="fa fa-arrow-circle-right"></i>
                                                </button>
                                                @*</div>*@
                                            </div>
                                            @Html.ActionLink(" ", "Delete", new { id = item.MessageId }, new { @class = "glyphicon glyphicon-trash" })
                                            @Html.ActionLink(" ", "Details", new { id = item.MessageId }, new { @class = "glyphicon glyphicon-info-sign" })


                                            <!-- /.btn-group -->
                                            @*<button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">
                                                    <i class="fa fa-print"></i>
                                                </button>*@<button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">
                                                <i class="fa fa-print"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td></td>
                                </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
