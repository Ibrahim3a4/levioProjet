@model IEnumerable<Domain.Entity.Client>

<button class="btn btn-primary btn-round" name="CREATE" onclick="location.href=' @Url.Action("create", "Client")'" >
  
    <i class="fa fa-plus"></i>
</button>

   

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<div class="container">
    <div class="row">


        <div class="col-md-12">
            <h4>Clients</h4>
            <div class="table-responsive">

                <table id="mytable" class="table table-bordred table-striped">
                    <thead>

                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                          
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Logo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Addresse)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OrganizationalChart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NbResInServ)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NbProjAf)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Logo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Addresse)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrganizationalChart)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NbResInServ)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NbProjAf)
                                </td>
                                <td>
                                    <button class="btn btn-primary btn-icon btn-round" onclick="location.href=' @Url.Action("Edit", "Client", new { id = item.Id })'">
                                       
                                        <i class="fa fa-pencil"></i>
                                    </button>
                                    <button class="btn btn-info btn-icon btn-round" onclick="location.href=' @Url.Action("Detail", "Client", new { id = item.Id })'">
                                   
                                        <i class="fa fa-eye"></i>
                                    </button>
                                    <button class="btn btn-danger btn-icon btn-round" onclick="location.href=' @Url.Action("Delete", "Client", new { id = item.Id })'">
                                     
                                        <i class="fa fa-remove"></i>
                                    </button>
                                  
                                    
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#link" aria-label="Previous">
                            <span aria-hidden="true"><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#link">1</a></li>
                    <li class="page-item "><a class="page-link" href="#link">2</a></li>
                    <li class="page-item"><a class="page-link" href="#link">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#link" aria-label="Next">
                            <span aria-hidden="true"><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>

                        </a>
                    </li>
                </ul>

        </div>
    </div>
</div>
