@using MapWeb.Contollers
@model MapWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    <h3>Create a new account</h3>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <!--Email-->
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" st>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <!--Password-->
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

     <!--name-->
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <!--Password Confirmation-->
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <!--Account Type-->
    <div class="form-group">
        @Html.LabelFor(m => m.AccountType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="padding-left:400px ">
            @Html.Label("Client: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, Domain.Entity.EAccountType.Client , new { @checked = "checked" })
            @Html.Label("Ressource: ", new { @class = "control-label" }) @Html.RadioButtonFor(m => m.AccountType, Domain.Entity.EAccountType.Ressource)
        </div>
    </div>

    <!--Submit Button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>


}


