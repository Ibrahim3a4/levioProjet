@model IEnumerable<Domain.Entity.Request>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <div> Serach by Requirements : @Html.TextBox("SearchString")    </div>
            </td>

            <td>
                <input type="submit" value="Search" id="submit" />
            </td>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.requirements)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.profileRequired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.career)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.depositDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.requirements)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.profileRequired)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.career)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.director)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.depositDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idRequest }) |
            @Html.ActionLink("Details", "Details", new { id=item.idRequest }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idRequest })
        </td>
    </tr>
}

</table>
